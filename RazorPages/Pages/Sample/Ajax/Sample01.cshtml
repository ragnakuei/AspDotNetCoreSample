@* 收到後端資料後，以 js alert() 方式呈現 *@
@page
@model Sample01

@* 會以 form-data 的方式 Post 到後端 *@
<form method="post"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-complete="completed">
    Name:
    <input type="text" name="name"/>
    <br>
    <input type="submit"/>
</form>

@section scripts{
    @* tag helper 的 partial view 的用法 *@
    <partial name="_JqueryAjaxUnobtrusive" />
    
    <script>
        completed = function (xhr) {
            alert(`Hi ${xhr.responseText}!`);
        };
    </script>
}